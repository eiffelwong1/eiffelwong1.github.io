---
import Document from "/src/components/Icon/Document.astro";
import { Icon } from "astro-icon/components";

const common =
  "rounded-3xl flex items-center justify-center text-inherit hover:text-inherit";
---

<div class="grid grid-cols-4 m-auto max-w-3xl gap-6 py-8 pb-12 text-black">
  <div class="col-span-3 grid grid-rows-3 gap-6">
    <div class="row-span-1 grid grid-cols-3 gap-6">
      <div class=`col-span-2 ${common}`>
        <h2
          class="font-bold text-7xl boarder text-transparent hover:text-red-300 bg-clip-text bg-gradient-to-r from-pink-500 to-amber-100"
        >
          Contacts
        </h2>
      </div>
      <a
        class=`group col-span-1 transition ease-in-out hover:bg-orange-300 bg-orange-200 aspect-square ${common}`
        href="mailto:eiffelynx@gmail.com"
      >
        <Icon
          name="mdi:envelope-outline"
          class="w-12 h-12 block group-hover:hidden"
        />
        <Icon
          name="mdi:envelope-fast-outline"
          class="w-12 h-12 hidden group-hover:block"
        />
      </a>
    </div>
    <div class="row-span-2 grid grid-cols-3 gap-6">
      <a
        class=`group col-span-1 transition ease-in-out duration-700 hover:bg-blue-300 bg-blue-200 hover:bg-[length:50px_50px] hover:bg-linkedin ${common}`
        href="https://www.linkedin.com/in/sing-wong-378934b8/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="mdi:linkedin" class="w-12 h-12 group-hover:invisible" />
      </a>
      <a
        class=`group hover:bg-green-300 bg-green-200 col-span-2 aspect-square ${common} flex flex-col h-full`
        href="https://github.com/eiffelwong1"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon
          name="mdi:github"
          class="w-24 h-24 transition ease-in-out group-hover:-translate-y-5"
        />
        <p class="transition ease-in-out group-hover:block hidden">Github</p>
      </a>
    </div>
  </div>
  <div class="col-span-1">
    <div class="grid grid-rows-3 gap-6">
      <a
        class=`group row-span-2 transition ease-in-out hover:bg-yellow-300 bg-yellow-200 ${common} flex flex-col justify-around`
        href="/Sing_Wong_Resume.pdf"
        target="_blank"
      >
        <div class="w-12 h-12">
          <Icon name="mdi:file-document-outline" class="w-12 h-12 origin-left group-hover:skew-y-12 transition ease-in-out" />
        </div>
        <p>Resume</p>
      </a>
      <a
        class=`row-span-1 transition ease-in-out hover:bg-indigo-300 bg-indigo-200 aspect-square ${common} hover:animate-pulse`
        href="https://www.kaggle.com/eiffelwong1"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="simple-icons:kaggle" class="w-12 h-12" />
      </a>
    </div>
  </div>
</div>
